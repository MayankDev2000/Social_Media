<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="6dp"
    android:background="@color/cardview_light_background"
    android:layout_height="wrap_content">

   <include
       android:id="@+id/HomeProfileBadge"
       layout="@layout/profile_badge"
       />
    <TextView
        android:id="@+id/HomePostView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_margin="5dp"
        android:gravity="top|center"
        android:text="@string/demo"
        android:background="@drawable/text_view_shape"
        app:layout_constraintTop_toBottomOf="@+id/HomeProfileBadge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/HomeCreated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:layout_margin="5dp"
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintTop_toBottomOf="@id/HomePostView"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>